#!/bin/sh

# ANSI Color Codes
GREEN="\033[1;32m"
CYAN="\033[1;36m"
YELLOW="\033[1;33m"
RED="\033[1;31m"
MAGENTA="\033[1;35m"
NC="\033[0m" # No Color

# Animasi loading
spinner() {
  local pid=$!
  local delay=0.1
  local spinstr='|/-\'
  echo -n " "
  while [ "$(ps a | awk '{print $1}' | grep $pid)" ]; do
    local temp=${spinstr#?}
    printf " [%c]  " "$spinstr"
    local spinstr=$temp${spinstr%"$temp"}
    sleep $delay
    printf "\b\b\b\b\b\b"
  done
  echo " ✅"
}

echo -e "${CYAN}🚀 Running pre-commit hook...${NC}"

# 🔍 Running Tests
echo -e "${YELLOW}🔬 Running tests...${NC}"
(yarn test --passWithNoTests > /dev/null 2>&1) & spinner
if [ $? -ne 0 ]; then
  echo -e "${RED}❌ Tests failed! Commit aborted.${NC} 💥"
  exit 1
fi

# 🎨 Format Check
echo -e "${MAGENTA}🎨 Checking code format...${NC}"
(npm run check-format > /dev/null 2>&1) & spinner
if [ $? -ne 0 ]; then
  echo -e "${RED}❌ Format check failed! Please run 'npm run format'.${NC} ✨"
  exit 1
fi

# 🚨 Lint Check
echo -e "${YELLOW}🚨 Running lint check...${NC}"
(npm run check-lint > /dev/null 2>&1) & spinner
if [ $? -ne 0 ]; then
  echo -e "${RED}❌ Lint check failed! Please fix lint errors.${NC} 🚫"
  exit 1
fi

# 🏗️ Type Checking
echo -e "${CYAN}🧠 Running type check...${NC}"
(npm run check-types > /dev/null 2>&1) & spinner
if [ $? -ne 0 ]; then
  echo -e "${RED}❌ Type check failed! Please fix TypeScript errors.${NC} 🔍"
  exit 1
fi

# ✅ All Checks Passed
echo -e "${GREEN}🎉 All checks passed! Great job, you're amazing! 🚀✨${NC}"
echo -e "${MAGENTA}💡 Remember: Clean code is happy code! 😃${NC}"

exit 0
